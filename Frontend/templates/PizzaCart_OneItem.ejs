<div class="ordered-pizza">
    <h3 class="title"><%= pizza.title %>
        <% if (size == "big_size") {%>
        (Велика)
        <%} else {%>
        (Мала)
        <% } %>
    </h3>
    <div class="order-details">
        <span class="size-img"><img src="assets/images/size-icon.svg"><span class="d"> 30</span></span>
        <span class="weight-img"><img src="assets/images/weight.svg"><span class="gr"> 460</span></span>
    </div>
    <div class="order-price">
        <span class="price"><%= pizza[size].price * quantity %> грн</span>
        <span class="btn btn-success plus">+</span>
        <span class="quantity"><%= quantity %></span>
        <span class="btn btn-danger minus">&ndash;</span>
        <span class="sht">шт.</span>
        <span class="btn btn-default delete">&times;</span>
        <img class="pizza-img" src="<%= pizza.icon %>">
    </div>
</div>